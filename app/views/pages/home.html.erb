  <title>POS</title>
  <%= javascript_pack_tag 'paymentcalc.js'%>
  <%= javascript_pack_tag 'bills.js' %>
</head>
<body>
<div class="Container">
  <div class="Screen-container">
    <div class="Screen">
  <!-- 'add screen later' -->
    </div>
    <div class="payment-calc">
    <table>
      <tr>
            <td colspan="3">
                <input type="text" id="result">
            </td>
            <td><input type="button" value="Print" id="print-btn"></td>
      </tr>
      <tr>
            <td><input type="button" value="1" ></td>
            <td><input type="button" value="2" ></td>
            <td><input type="button" value="3" ></td>
            <td><input type="button" value="Tables" id="payment-options"></td> <!-- 'add table page later' -->
        </tr>
        <tr>
            <td><input type="button" value="4" ></td>
            <td><input type="button" value="5" ></td>
            <td><input type="button" value="6" ></td>
            <td><input type="button" value="amex" id="payment-options"></td>
        </tr>
        <tr>
            <td><input type="button" value="7" ></td>
            <td><input type="button" value="8" ></td>
            <td><input type="button" value="9" ></td>
            <td><input type="button" value="card" id="payment-options"></td>
        </tr>
        <tr>
            <td><input type="button" value="0" ></td>
            <td><input type="button" value="." id="Decimal"></td>
            <td><input type="button" value="C" onclick="clear()"></td>
            <td><input type="button" value="Cash" id="payment-options"></td>
        </tr>
    </table>
  </div>
  </div>

  <div class="Categories">
  <% if @items.empty?%>
    <%= link_to "Add your Items here", items_path %>
    <%else%>
    <% @unique_categories.each do |category| %>
      <button class="category-buttons" data-category="<%= category %>"><%= category %></button>
    <% end %>
  <%end%>
  </div>

  <div class="Items">
  </div>
</div>

<script>
const display = (val) => {
        document.getElementById('result').value += val
      }
</script>
