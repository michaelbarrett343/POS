<div class="main">


<div class="container">

  <div class="signup-content">
    
    <div class="signup-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2 class="login-title">Log in</h2>
      <div class="field">
        <%= image_tag 'noun-sign-in-2.png', class: "reg-icon" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"transparent", placeholder: "Email" %>
      </div>

      <div class="field">
        <%= image_tag 'noun-lock-2.png', class: "reg-icon" %>
        <%= f.password_field :password, autocomplete: "current-password", class:"transparent", placeholder: "Password"%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "log-in-btn"%>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
    </div>

    <div class="signin-pic">
      <h1>POS System For Hospitality</h1>
      <%= image_tag '—Pngtree—water bottle icon - watercolor_4997726.png', class:"signin-pic"%>
    </div>
  </div>
  </div>
</div>
